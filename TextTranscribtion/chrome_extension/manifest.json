{
  "manifest_version": 3,
  "name": "Real-Time YouTube Captions",
  "version": "1.0",
  "description": "Live multilingual captions for YouTube videos",
  "minimum_chrome_version": "116",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
